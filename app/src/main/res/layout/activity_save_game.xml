<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveGame">

    <TextView
        android:id="@+id/edit_text_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Title for game (required):" />

    <EditText
        android:id="@+id/input_game_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/edit_text_game_title"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_centerHorizontal="true"
        android:hint="insert title here"/>

    <Button
        android:id="@+id/save_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_game_title"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:text="Save" />

    <Button
        android:id="@+id/cancel_save_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_game_title"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="220dp"
        android:text="Cancel" />

</RelativeLayout>